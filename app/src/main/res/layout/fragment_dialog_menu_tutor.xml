<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="usuario"
            type="gps.gmv.akista.entidades.Usuario" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBlack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/halfMargin"
            android:background="@color/appPink">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/doubleMargin"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{usuario.nombre}"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/bigText" />

                    <androidx.cardview.widget.CardView
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_marginHorizontal="@dimen/doubleMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/appBlack"
                        app:cardCornerRadius="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btAsistencia"
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/appPink"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appWhite"
                                android:text="Asistencia" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_marginHorizontal="@dimen/doubleMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/appBlack"
                        app:cardCornerRadius="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btCalificaciones"
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/appPink"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appWhite"
                                android:text="Calificaciones" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_marginHorizontal="@dimen/doubleMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/appBlack"
                        app:cardCornerRadius="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btCalendario"
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/appPink"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appWhite"
                                android:text="Calendario" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_marginHorizontal="@dimen/doubleMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/appBlack"
                        app:cardCornerRadius="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btRegistraHijo"
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/appPink"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appWhite"
                                android:text="Relacionar hijo" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_marginHorizontal="@dimen/doubleMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/appBlack"
                        app:cardCornerRadius="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btCerrarSesion"
                            android:layout_margin="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/appPink"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/appWhite"
                                android:text="Cerrar sesiÃ³n" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
