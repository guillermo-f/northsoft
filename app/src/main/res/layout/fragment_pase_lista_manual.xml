<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appRed">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btRegresar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_left"
                android:backgroundTint="@color/appRed"
                android:tint="@color/appBlack"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/doubleMargin" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:src="@drawable/akist_logo"
                android:layout_margin="@dimen/quadMargin" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appWhite"
                    android:layout_marginHorizontal="@dimen/doubleMargin">

                    <Spinner
                        android:id="@+id/spGpo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <gps.gmv.akista.otros.NonScrollListView
                        android:id="@+id/layoutAsist"
                        android:dividerHeight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/appWhite"
                        android:layout_marginVertical="@dimen/margin"
                        android:layout_marginHorizontal="@dimen/doubleMargin" />

                    <Button
                        android:id="@+id/btSend"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/appWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:text="Terminar"
                        android:layout_marginBottom="@dimen/margin" />

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>
